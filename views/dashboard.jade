extends base

block page-content
	p this is dashboard page content

	article.row
		.span14
			- if (documents.length)
				h3 Documents
				table.zebra-striped
					thead
						tr
							th Title
							th Body
							th Tags
							th Date
					tbody
					- documents.forEach(function(doc){
						tr
							td= doc['title']
							td= doc['body']
							td= doc['tags']
							td= doc['date']
					- })
			- else
				p No documents created yet.




			- if (tags.length)
				h3 Tags
				table.zebra-striped
					thead
						tr
							th Name
							th Description
					tbody
					- tags.forEach(function(doc){
						tr
							td= doc['name']
							td= doc['description']
					- })
			- else
				p No tags created yet.